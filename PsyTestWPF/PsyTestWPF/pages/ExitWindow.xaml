<Window x:Class="PsyTestWPF.pages.ExitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PsyTestWPF.pages"
        mc:Ignorable="d"
        Title="" Height="90" Width="220" WindowStyle="None" ResizeMode="NoResize"
        Background="#2B2D31">
    <Border MouseLeftButtonDown="Border_MouseLeftButtonDown" BorderThickness="1" CornerRadius="15">
        <Grid>
            <Button Width="50" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5" Click="Button_Click">OK</Button>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Margin="5,10,0,0">Результат сохранён!</TextBlock>
        </Grid>
    </Border>
    
</Window>
